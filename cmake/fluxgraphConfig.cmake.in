# fluxgraphConfig.cmake.in
# CMake configuration for FluxGraph library
# This file is generated during installation

@PACKAGE_INIT@

# Record which optional loaders were enabled at build time
set(FLUXGRAPH_JSON_ENABLED @FLUXGRAPH_JSON_ENABLED@)
set(FLUXGRAPH_YAML_ENABLED @FLUXGRAPH_YAML_ENABLED@)

include(CMakeFindDependencyMacro)

# Optional loader dependencies
if(FLUXGRAPH_JSON_ENABLED)
    find_dependency(nlohmann_json CONFIG REQUIRED)
endif()

if(FLUXGRAPH_YAML_ENABLED)
    find_dependency(yaml-cpp CONFIG REQUIRED)
endif()

# Include the targets file
include("${CMAKE_CURRENT_LIST_DIR}/fluxgraphTargets.cmake")

# Check required components
check_required_components(fluxgraph)

# Usage example:
#
#   find_package(fluxgraph REQUIRED)
#   target_link_libraries(myapp PRIVATE fluxgraph::fluxgraph)
#
# The imported target will have JSON/YAML loaders available if
# FLUXGRAPH_JSON_ENABLED=ON or FLUXGRAPH_YAML_ENABLED=ON
